<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Function</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>Select function</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0">
										<numIndex index="0">Favorite Posts</numIndex>
										<numIndex index="1">User->favoritePosts</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">Observed Threads</numIndex>
										<numIndex index="1">User->observedThreads</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">Latest Threads</numIndex>
										<numIndex index="1">Thread->listLatest</numIndex>
									</numIndex>
									<numIndex index="3">
										<numIndex index="0">Latest Posts</numIndex>
										<numIndex index="1">Post->listLatest</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</switchableControllerActions>

					<settings.listView>
						<TCEforms>
							<label>listView</label>
							<displayCond>
								<OR>
									<numIndex index="0">FIELD:switchableControllerActions:=:User->observedThreads
									</numIndex>
									<numIndex index="1">FIELD:switchableControllerActions:=:User->favoritePosts
									</numIndex>
								</OR>
							</displayCond>
							<config>
								<type>input</type>
								<eval>trim</eval>
								<size>30</size>
								<renderType>inputLink</renderType>
							</config>
						</TCEforms>
					</settings.listView>

					<settings.limit>
						<TCEforms>
							<label>Limit</label>
							<displayCond>
								<OR>
									<numIndex index="0">FIELD:switchableControllerActions:=:Thread->listLatest
									</numIndex>
									<numIndex index="1">FIELD:switchableControllerActions:=:Post->listLatest
									</numIndex>
								</OR>
							</displayCond>
							<config>
								<type>input</type>
								<eval>trim</eval>
								<size>5</size>
							</config>
						</TCEforms>
					</settings.limit>

				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>
